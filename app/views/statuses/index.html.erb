<h1>Listing statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.content %></td>
        <td>
            <ul class="button-group radius tiny">
           <li> <%= link_to 'Show', status, :class => "button tiny" %></li>
           <li> <%= link_to 'Edit', edit_status_path(status), :class => "button tiny" %></li>
           <li> <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button tiny" %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
